<div class="form-container">
  <div class="introduction">
    <% if user_signed_in? %>
      <h3>Hi, <%= current_user.first_name.capitalize%>!</h3>
    <% else %>
      <h3>Welcome to WorkingLatte</h3>
    <% end %>
    <p>Where would you like to work today?</p>
  </div>
  <div class="seach-container">
    <%= form_tag cafes_path, method: :get do %>
      <div class="location">
        <%= text_field_tag :location,
            params[:location],
            class: "form-control",
            placeholder: "Enter a city"
         %>
      </div>
      <div class="button-container">
        <%= button_tag(type: "submit", class: "home-search") do %>
          <p>Search</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
