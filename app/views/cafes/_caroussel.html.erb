<% if @cafe.photos.size == 1 %>
    <img class="d-block w-100" src="<%= cl_image_path @cafe.photos.first.key %>" alt="photo" >

<% elsif @cafe.photos.size > 1 %>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <% @cafe.photos.size.times do |i| %>
                <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= "active" if i.zero? %>"></li>
            <% end %>
        </ol>

        <div class="carousel-inner">
            <% @cafe.photos.each_with_index do |photo, index| %>
                <div class="carousel-item <%= "active" if index.zero? %>">
                    <img class="d-block w-100 caroussel-img" src="<%= cl_image_path photo.key %>" alt="<%= index.ordinalize %> image">
                </div>
            <% end %>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
<% end %>
